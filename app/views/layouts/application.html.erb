<!DOCTYPE html>
<html>
<head>
 <meta http-equiv="Content-type" content="text/html; charset=utf-8" />  
<title><%= title %></title>
<%= csrf_meta_tag %>
<%= render 'layouts/stylesheets' %>
<%= javascript_include_tag :defaults %>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.js"></script>
  <script src="../javascripts/jchess-0.1.0.js"></script>
  <script src="../javascripts/app.js"></script>

</head>
<div class="container">


<div id="top_panel">
<div id="logo">
	<%= render 'layouts/logo' %>
</div>
<div id="banner">
	<%= render 'layouts/banner' %>
	</div>
<div id="login_panel">	
	<%= render 'layouts/header' %>
	</div>
	</div>



<div id="left_panel">
	<div id="nav_panel">
			<%= render 'layouts/navigation' %>
	</div>
	
	<div id="chat_panel">
		<div id="display_chat_panel">
			<%= render 'layouts/chat' %>
		</div>
		<div id="add_chat_panel">
			<%= render 'layouts/chat_submit' %>
		</div>
	</div>
</div>	
	
<div id="board_panel">
		<div id="board">

	<%= yield %>
			</div>
		<div id="variations">
			</div>
</div>

<div id="right_panel">	
	<%= render 'layouts/right_panel'%>
</div>

<div id="footer">
	<%= render 'layouts/footer' %>
</div>

	

<%= debug(params) if Rails.env.development? %>

</div>
<% if admin_in? %>
<div id="cms">
	<%= render 'layouts/cms' %>
</div>
<% end %>
</body>
</html>