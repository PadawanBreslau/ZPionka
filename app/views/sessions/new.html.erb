<h1>Log-in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
<div class="field">
<%= f.label :login %><br />
<%= f.text_field :login %>
</div>
<div class="field">
<%= f.label :password %><br />
<%= f.password_field :password %>
</div>
<div class="actions">
<%= f.submit "Log in" %>
</div>
<% end %>
<br/>
<p>Don't have an acount?
<%= link_to "Sign up!", new_user_path %></p>