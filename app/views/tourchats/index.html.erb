
<% unless @tourchats == nil %>

<% @tourchats.each do |tourchat|%>
<% @user = User.find(tourchat.user_id) %>
<div class="chat_stripe">
<%= tourchat.created_at.strftime("%h.%m") %>
<%= link_to @user.login, @user %>: <%= tourchat.content %>
</div>
<%end%>

<div class="add_chat_stripe">
<% form_for @tourchat do |f| %>
<table><tr>
<td><%= f.text_field :content %></td><td><%= f.submit "Save comment" %></td>
</tr></table>
<%end%>

</div>	


<% end %>