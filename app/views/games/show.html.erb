  </p>
  <div id="pgn-jchess">   
	<%= @pgn_string %> </div>

  </p>
	
</div>

<div id="moves">
	
<% @positions.each do |position| %>

	<% half_move = position.move_number*2 %>
	<% if position.white_on_move? %>
		
		<span class="move_number"><%= position.move_number.to_s + ". " %></span>
		<% half_move -= 1 %>
	<% end %>
	
	
   <a class="goto-position" href="#" data-move="<%= half_move%>"><%= position.move %></a>

<% end %>	

	
</div>	

