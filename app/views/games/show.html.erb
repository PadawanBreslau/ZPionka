<div id="wrapper">

<h3 id="game_header_name">
	<%= link_to @ggame.get_white.to_s + " (" + @ggame.get_white_elo_str.to_s + ") ", @player_white %>-
	<%= link_to @ggame.get_black.to_s + " (" +  @ggame.get_black_elo_str.to_s + ") ", @player_black  %>
	<%= @ggame.get_result_str.to_s %></h3>

