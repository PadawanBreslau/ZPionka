<% form_for @message do |f| %>
<%= render 'shared/privmess_error_messages' %>

<table width="100%">
<tr>
<td><%= f.label :Title %></td>
<td><%= f.text_field :title %></td>
</tr>

<tr>
<td><%= f.label :Message_content %></td>
<td><%= text_area :message, :message, :size => "40x10" %></td>
</tr>

  <%= f.hidden_field :user1_id, :value => current_user.id %>
  
  <%= f.hidden_field :user2_id, :value => params[:user2_id]  %>

<tr><td>
<%= f.submit "Send message" %></td>
</tr>
</table>
<% end %>
