<b>Sign-up form</b>
<%= form_for(@info) do |f| %>
<%= render 'shared/info_error_messages' %>

<table>
<tr>
<td><%= f.label :Title %></td>
<td><%= f.text_field :title %></td>
</tr>

<tr>
<td><%= f.label :Lead %></td>
<td><%= f.text_field :lead %></td>
</tr>


<tr>
<td><%= f.label :Short_summary %></td>
<td><%= text_area :info , :short_content	  %></td>
</tr>


<tr>
<td><%= f.label :Content %></td>
<td><%= text_area :info , :content	  %></td>
</tr>

<%= f.hidden_field :user_id, :value => @user.id %>

<tr><td>
<%= f.submit "Save" %></td>
</tr>
</table>
<% end %>