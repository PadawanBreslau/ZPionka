<b>Toma IFRAME creator</b>
<%= form_for(@iframe) do |f| %>


<table>
<tr>
<td><%= f.label :Url %>*</td>
<td><%= f.text_field :url %></td>
</tr>

<tr>
<td><%= f.label :width %></td>
<td><%= f.text_field :width%></td>
</tr>

<tr>
<td><%= f.label :height %></td>
<td><%= f.text_field :height%></td>
</tr>

<tr>
<td><%= f.label :Frameborder %></td>
<td><%= f.text_field :frameborder %></td>
</tr>

<tr>
<td><%= f.label :Scrolling %></td>
<td><%= f.check_box :scrolling %></td>
</tr>

<tr>
<td><%= f.label :Marginwidth %></td>
<td><%= f.text_field :marginwidth %></td>
</tr>

<tr>
<td><%= f.label :Marginheight %></td>
<td><%= f.text_field :marginheight %></td>
</tr>

<tr>
<td><%= f.label :Tournament_name %></td>
<td><%= f.text_field :tournament_name %></td>
</tr>

<tr>
<td><%= f.label :Optional_code %></td>
<td><%= text_area :tomaiframe, :optional_code, :size => "40x10"  %></td>
</tr>


<tr>
<td><%= f.label :Broadcast_info %></td>
<td><%= text_area :tomaiframe, :broadcast_info, :size => "40x10"  %></td>
</tr>

<tr><td>
<%= f.submit "Save" %></td>
</tr>
</table>
<% end %>